  "components": {
    "schemas": {
      "CreateExamDto": {
        "required": [
          "endTime",
          "semesterId",
          "startTime",
          "status",
          "subjectId",
          "title"
        ],
        "type": "object",
        "properties": {
          "subjectId": {
            "type": "integer",
            "format": "int64"
          },
          "semesterId": {
            "type": "integer",
            "format": "int64"
          },
          "title": {
            "maxLength": 255,
            "minLength": 0,
            "type": "string"
          },
          "status": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "startTime": {
            "type": "string",
            "format": "date-time"
          },
          "endTime": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "CreateExaminerDto": {
        "required": [
          "email",
          "fullName"
        ],
        "type": "object",
        "properties": {
          "fullName": {
            "maxLength": 255,
            "minLength": 0,
            "type": "string"
          },
          "email": {
            "maxLength": 255,
            "minLength": 0,
            "type": "string",
            "format": "email"
          }
        },
        "additionalProperties": false
      },
      "CreateRubricCriterionDto": {
        "required": [
          "criterionName",
          "maxScore"
        ],
        "type": "object",
        "properties": {
          "criterionName": {
            "maxLength": 255,
            "minLength": 0,
            "type": "string"
          },
          "maxScore": {
            "minimum": 0,
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "CreateRubricDto": {
        "required": [
          "examId",
          "name",
          "rubricCriteria"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 255,
            "minLength": 0,
            "type": "string"
          },
          "examId": {
            "type": "integer",
            "format": "int64"
          },
          "rubricCriteria": {
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CreateRubricCriterionDto"
            }
          }
        },
        "additionalProperties": false
      },
      "CreateSemesterDto": {
        "required": [
          "endDate",
          "name",
          "startDate"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "startDate": {
            "type": "string",
            "format": "date"
          },
          "endDate": {
            "type": "string",
            "format": "date"
          }
        },
        "additionalProperties": false
      },
      "CreateSubjectDto": {
        "required": [
          "code",
          "name"
        ],
        "type": "object",
        "properties": {
          "code": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "name": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "CreateViolationDto": {
        "required": [
          "submissionId",
          "type"
        ],
        "type": "object",
        "properties": {
          "submissionId": {
            "type": "integer",
            "format": "int64"
          },
          "type": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "description": {
            "maxLength": 1000,
            "minLength": 0,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "GradeSubmissionDto": {
        "required": [
          "totalScore"
        ],
        "type": "object",
        "properties": {
          "totalScore": {
            "minimum": 0,
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "VerifyViolationDto": {
        "required": [
          "verified"
        ],
        "type": "object",
        "properties": {
          "verified": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "oauth2": {
        "type": "http",
        "description": "JWT Authorization header using the Bearer scheme. \r\n\r\nEnter 'Bearer' [space] and then your token in the text input below.\r\n\r\nExample: \"Bearer [token]\"",
        "scheme": "Bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}